#mscsem4image_processing_1.ipynb
#to read an image(RGB) and then extract all pixels from the image and store in a 3D array.
# (i)   Display all pixels on the screen
# (ii)  Display RGB image on screen
# (iii) Save all pixels in some output file

path = r'/content/drive/MyDrive/Publicly Shared/MSc Computer Science SXCCAL/M.Sc. Sem 4/Img Proc (AN Sir)/20250113/'

import numpy as np
import matplotlib.pyplot as plt

file1 = input("Enter any RGB image file name: ")
file2 = input("Enter the output image file name: ")

data1 = plt.imread(path+file1)  # To extract all pixels in data1

shape1 = data1.shape

r,c,d = shape1[0],shape1[1],shape1[2]

print("Rows = ",r,"    Columns = ",c,"    Depth = ",d)
print(data1)

#To extract the Red, Green and Blue components separately
R, G, B = data1[:,:,0], data1[:,:,1], data1[:,:,2]

#Gray Image
gray1=.2989*R + .5870*G + .114*B

shape2 = gray1.shape
r1, c1 = shape2[0], shape2[1]
print("Grayscale Image")
print("Rows = ",r1,"    Columns = ",c1)

#Converting to B/W:

bw1 = np.copy(gray1)  #copying gray1 to b/w

for i in range(0, r1):
  for j in range(0, c1):
    x = bw1[i, j]
    if(x>=127):
      bw1[i,j] = 255
    else:
      bw1[i,j] = 0

#Converting to inverse of B/W:

invbw1 = np.copy(bw1)  #copying b/w to inv b/w
invbw1 = 255 - invbw1

#Inversing Gray image

invgray = 255 - np.copy(gray1)

#To display all images in a single canvas

rows = 3
cols = 2

fig = plt.figure(figsize=(15, 17.5))

#RGB image:
fig.add_subplot(rows, cols, 1)
plt.axis('off')
plt.title('RGB Image')
plt.imshow(data1)

#Gray image:
fig.add_subplot(rows, cols, 3)
plt.axis('off')
plt.title('Gray Image')
plt.imshow(gray1, cmap="gray")

#Inv Gray image:
fig.add_subplot(rows, cols, 4)
plt.axis('off')
plt.title('Inverse Gray Image')
plt.imshow(invgray, cmap="gray")

#B/W image:
fig.add_subplot(rows, cols, 5)
plt.axis('off')
plt.title('B/W Image')
plt.imshow(bw1, cmap="gray")

#Inv B/W image:
fig.add_subplot(rows, cols, 6)
plt.axis('off')
plt.title('Inv B/W Image')
plt.imshow(invbw1, cmap="gray")

plt.savefig(path+file2)
